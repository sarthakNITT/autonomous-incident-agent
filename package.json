{
  "name": "autonomus-incident-agent",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 15",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "test": "bun test",
    "test:health": "bun test apps/*/src/health.test.ts",
    "test:e2e": "bun test test/e2e.test.ts",
    "validate": "./scripts/validate-deployment.sh",
    "deploy:prod": "./scripts/deploy-production.sh"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,json}": "prettier --write"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.1"
  }
}
