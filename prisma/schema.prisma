generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id                String   @id @default(uuid())
  title             String
  status            String
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  snapshotId        String?  @map("snapshot_id")
  rootCause         String?  @map("root_cause")
  patchDiffKey      String?  @map("patch_diff_key")
  prUrl             String?  @map("pr_url")
  validationStatus  Boolean? @map("validation_status")
  repoName          String?  @map("repo_name")
  filePath          String?  @map("file_path")
  projectId         String?  @map("project_id")
  project           Project? @relation(fields: [projectId], references: [id])

  @@map("incidents")
}

model Project {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  name          String
  repoUrl       String   @map("repo_url")
  githubToken   String?  @map("github_token")
  openaiApiKey  String?  @map("openai_api_key")
  baseBranch    String   @default("main") @map("base_branch")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  incidents     Incident[]

  @@map("projects")
}
