generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id
  email        String    @unique
  firstName    String?   @map("first_name")
  lastName     String?   @map("last_name")
  imageUrl     String?   @map("image_url")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  lastSignInAt DateTime? @map("last_sign_in_at")
  projects     Project[]

  @@map("users")
}

model Incident {
  id               String   @id @default(uuid())
  title            String
  status           String
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  snapshotId       String?  @map("snapshot_id")
  rootCause        String?  @map("root_cause")
  patchDiffKey     String?  @map("patch_diff_key")
  prUrl            String?  @map("pr_url")
  validationStatus Boolean? @map("validation_status")
  repoName         String?  @map("repo_name")
  filePath         String?  @map("file_path")
  repoUrl          String?  @map("repo_url")
  projectId        String?  @map("project_id")
  project          Project? @relation(fields: [projectId], references: [id])

  @@map("incidents")
}

model Project {
  id              String     @id @default(uuid())
  userId          String     @map("user_id")
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  repoUrl         String     @map("repo_url")
  githubToken     String?    @map("github_token")
  openaiApiKey    String?    @map("openai_api_key")
  baseBranch      String     @default("main") @map("base_branch")
  resolutionMode  String     @default("manual") @map("resolution_mode")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")
  incidents       Incident[]

  @@map("projects")
}
